package core.dz1;

public class Rectangle {
	private int height;
	private int width;

	public Rectangle() {
	}

	public Rectangle(int height, int width) {
		this.height = height;
		this.width = width;
	}

	public int per() {
		System.out.println("Площа прямокутника ="+(this.height + this.width) * 2 );
		return (this.height + this.width) * 2;
	}

	public int plos() {
		System.out.println("Периметр прямокутника = "+this.height * this.width );
		return (this.height * this.width);
	}
}